<MarvinExternalFile>
        <AliasList>
            <Alias DialWidth="280"/> 	
        </AliasList>
		
    <Tab>
        <Title>Dials</Title>
        <Widget File="Demo\DemoWidgets\Gauge10GbE.xml" row="1" column="1" Width="$(DialWidth)">
            <Title>Throughput</Title>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
        </Widget>
        <Widget File="Demo\DemoWidgets\GaugeSimple10GbE.xml" row="1" column="2" Width="$(DialWidth)">
            <Title>Throughput</Title>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
        </Widget>
		
		
        <Widget File="Demo\DemoWidgets\GaugeOneEighty10GbE.xml" row="1" column="3" Width="$(DialWidth)">
            <Title>Throughput</Title>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
        </Widget>
        <Widget File="Demo\DemoWidgets\GaugeRadial.xml" row="1" column="4" Width="$(DialWidth)">
            <Title>Throughput</Title>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
        </Widget>

        <Widget File="Demo\DemoWidgets\GaugeRadialSteel.xml" row="1" column="5" Width="$(DialWidth)">
            <Title>Throughput</Title>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
        </Widget>
        
        <Widget File="Demo\DemoWidgets\Gauge10GbE_test.xml" row="2" column="1"  Width="$(DialWidth)">
            <Title>Throughput</Title>
            <!-- <StyleOverride File="demo1.css"/> -->
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide"/>     
        </Widget>
        <Widget File="Demo\DemoWidgets\10GigSimpleGauge.xml" row="2" column="2"  Width="$(DialWidth)">
            <Title>Throughput</Title>
            <StyleOverride File="simplegauge.css"/>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide"/>     
        </Widget>
        <Widget File="Demo\DemoWidgets\GaugeOneEighty10GbE.xml" row="2" column="3"  Width="$(DialWidth)">
            <Title>Throughput</Title>
            <StyleOverride File="oneeightygauge1.css"/>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide"/>     
        </Widget>
        <Widget File="Demo\DemoWidgets\GaugeRadial.IOPs.xml" row="2" column="4"  Width="$(DialWidth)">
            <Title>Throughput</Title>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide"/>     

        </Widget>
        <Widget File="Demo\DemoWidgets\GaugeRadialSteel.xml" row="2" column="5"  Width="$(DialWidth)">
            <Title>Throughput</Title>
            <StyleOverride>
                <Item>-body: black; -tick-mark-fill: white; -tick-label-fill: white</Item>
            </StyleOverride>
            <MinionSrc ID="3to10" Namespace="DemoNamespace"/>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide"/>     
        </Widget>
        
        <Widget File="Button\Button.xml" row="3" column="3" Task="ShowHiddenDials" >
            <Title>Click me!</Title>
        </Widget>
        <Widget File="Text\Text.xml" row="2" column="0" rowSpan="2" >
            <InitialValue>New Styles!</InitialValue>
            <StyleOverride >
                <Item>-fx-rotate:-90;</Item>
            </StyleOverride>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide"/>     
        </Widget>
        <Widget File="Button\Button.xml" row="3" column="3" Task="HideHiddenDials">
            <StyleOverride ID="round-red">
                <Item>-fx-font-size:2.5em;</Item>
            </StyleOverride>
            <Title> Click me!</Title>
            <Peekaboo ID="AltDials" Namespace="DemoNamespace_Dials" Default="Hide" />     
        </Widget>
    
	
    </Tab>
        <TaskList ID="ShowHiddenDials">
            <TaskItem Type="Marvin"> 
                <DataToInsert ID="AltDials" Namespace="DemoNamespace_Dials" Data="Show"/> <!-- Use peekaboo to show some dials -->
            </TaskItem>
        </TaskList>
        <TaskList ID="HideHiddenDials">
            <TaskItem Type="Marvin"> 
                <DataToInsert ID="AltDials" Namespace="DemoNamespace_Dials" Data="Hide"/> <!-- Use peekaboo to hide some dials -->
            </TaskItem>
        </TaskList>
        <TaskList ID="PauseDials">
            <TaskItem Type="Marvin"> 
                <DataToInsert ID="AltDials" Namespace="DemoNamespace_Dials" Data="Pause"/> <!-- Use peekaboo to pause some dials -->
            </TaskItem>
        </TaskList>
        <TaskList ID="ResumeDials">
            <TaskItem Type="Marvin"> 
                <DataToInsert ID="AltDials" Namespace="DemoNamespace_Dials" Data="Resume"/>  <!-- Use peekaboo to resume some dials -->
            </TaskItem>
        </TaskList>
        <TaskList ID="TestTask" PerformOnStartup="true">  <!-- Sets the initial value, when app runs, just for fun -->
            <TaskItem Type="Marvin">
                <DataToInsert ID="3to10" Namespace="DemoNamespace" Data="3.4"/>
            </TaskItem>
        </TaskList>	
</MarvinExternalFile>