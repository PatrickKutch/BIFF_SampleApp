                    <MinionSrc ID="GraphSource4" Namespace="DemoNamespace"/>
                    <UnitsOverride>kT/S</UnitsOverride>
                    <Title>SSD</Title>
                </Widget>
                <Widget File="LCD\LCD.xml" row="1" column="0" Height="150" Width="550">
                    <MinionSrc ID="GraphSource3" Namespace="DemoNamespace"/>
                    <UnitsOverride>kT/S</UnitsOverride>
                    <Title>HDD</Title>
                </Widget>
            </Grid>
        </Grid>
    </Tab>
